<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <!-- 填充渐变颜色 -->
            <gradient
                android:angle="270"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="@color/white"
                android:startColor="@color/white" />
            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="1dp" android:color="#ffc257"></stroke>
            <!-- 矩形的圆角半径 -->
            <corners android:radius="0dp" />
        </shape>
    </item>
    <!--默认背景-->
    <item android:state_checked="false">
        <shape>
            <!-- 填充渐变颜色 -->
            <gradient
                android:angle="270"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="@color/white"
                android:startColor="@color/white" />
            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="1dp" android:color="#e4e4e4"></stroke>
            <!-- 矩形的圆角半径 -->
            <corners android:radius="0dp" />
        </shape>
    </item>
</selector>