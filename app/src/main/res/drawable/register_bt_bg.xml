<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <!-- 填充渐变颜色 -->
            <gradient
                android:angle="270"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#60fffafa"
                android:startColor="#60fffafa" />
            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="1dp" android:color="#fdd15b"></stroke>
            <!-- 矩形的圆角半径 -->
            <corners android:radius="6dp" />
        </shape>
    </item>
    <!--默认背景-->
    <item>
        <shape>
            <!-- 填充渐变颜色 -->
            <gradient
                android:angle="270"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#99fffafa"
                android:startColor="#99fffafa" />
            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="1dp" android:color="@color/lightgray"></stroke>
            <!-- 矩形的圆角半径 -->
            <corners android:radius="6dp" />
        </shape>
    </item>
</selector>